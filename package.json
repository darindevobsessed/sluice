{
  "name": "gold-miner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others -n agent,next -c cyan,green \"npm run agent\" \"npm run next:dev\"",
    "next:dev": "exec next dev -p ${PORT:-3001}",
    "agent": "exec env AGENT_PORT=${AGENT_PORT:-9334} tsx src/agent/index.ts",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate-data": "tsx scripts/migrate-data.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.31",
