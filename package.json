{
  "name": "sluice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev:cleanup && concurrently -n agent,next,warmup -c cyan,green,yellow \"npm run agent\" \"npm run next:dev\" \"sleep 3 && npm run dev:warmup\"",
    "dev:warmup": "tsx scripts/dev-warmup.ts",
    "next:dev": "exec next dev -p ${PORT:-3001} --webpack",
    "agent": "exec env AGENT_PORT=${AGENT_PORT:-9334} tsx src/agent/index.ts",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate-data": "tsx scripts/migrate-data.ts",
    "db:backfill-published-at": "tsx scripts/backfill-published-at.ts",
    "dev:cleanup": "lsof -ti:${PORT:-3001} -ti:${AGENT_PORT:-9334} | xargs kill -9 2>/dev/null; rm -f .next/dev/lock; exit 0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.31",
    "@anthropic-ai/sdk": "^0.78.0",
    "@danielxceron/youtube-transcript": "^1.2.6",
    "@huggingface/transformers": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/pg": "^8.16.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "better-auth": "^1.4.18",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "fast-xml-parser": "^5.3.4",
    "lucide-react": "^0.563.0",
    "mcp-handler": "^1.0.7",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "onnxruntime-web": "1.22.0-dev.20250409-89f8206ba4",
    "pg": "^8.18.0",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "overrides": {
    "onnxruntime-web": "$onnxruntime-web"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.3",
    "better-sqlite3": "^12.6.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.4",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
